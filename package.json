{
  "name": "news-app",
  "version": "2.6.2",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:coverage": "ng test --coverage --coverage-include='src/app/**/*.ts' --coverage-exclude='libs/**' --coverage-exclude='**/*.spec.ts'",
    "test:watch": "ng test --watch",
    "e2e": "ng e2e",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:ci": "npm run start & sleep 18 & npx cypress run",
    "commit": "git-cz",
    "lint": "ng lint"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,html,json,scss,css}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "private": true,
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    "@semantic-release/github",
    "@semantic-release/npm",
    "@semantic-release/git"
  ],
  "release": {
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "branches": [
      "main"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "npm@10.9.2",
  "dependencies": {
    "@angular/cdk": "20.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@ng-icons/core": ">=32.0.0 <34.0.0",
    "@ng-icons/lucide": ">=32.0.0 <34.0.0",
    "@spartan-ng/brain": "^0.0.1-alpha.569",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "ngx-sonner": ">=3.0.0",
    "rxjs": "~7.8.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.17",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.1",
    "@angular/cli": "^21.0.1",
    "@angular/compiler-cli": "^21.0.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@cypress/schematic": "^4.1.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@spartan-ng/cli": "^0.0.1-alpha.569",
    "@tailwindcss/postcss": "^4.1.12",
    "@vitest/coverage-v8": "^4.0.14",
    "angular-eslint": "21.0.1",
    "cypress": "15.7.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.3",
    "prettier": "^3.7.2",
    "tailwindcss": "^4.1.12",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.46.4",
    "vitest": "^4.0.8"
  }
}
