{
  "name": "news-app",
  "version": "2.6.2",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "commit": "git-cz",
    "e2e": "ng e2e",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:ci": "bash scripts/setup-config.sh && npm run start & sleep 18 & npx cypress run",
    "pretest": "bash scripts/setup-config.sh",
    "lint": "ng lint",
    "prepare": "husky",
    "prettier": "git diff --staged --name-only --diff-filter=d | grep -E '\\.(ts|json|scss|html)$' | xargs npx prettier --write && git add $(git diff --staged --name-only --diff-filter=d | grep -E '\\.(ts|json|scss|html)$')"
  },
  "husky": {
    "hooks": {
      "pre-commit": "node prettier-hook.js"
    }
  },
  "private": true,
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    "@semantic-release/github",
    "@semantic-release/npm",
    "@semantic-release/git"
  ],
  "release": {
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "branches": [
      "main"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@angular/animations": "^21.0.1",
    "@angular/cdk": "^21.0.0",
    "@angular/common": "^21.0.1",
    "@angular/compiler": "^21.0.1",
    "@angular/core": "^21.0.1",
    "@angular/forms": "^21.0.1",
    "@angular/platform-browser": "^21.0.1",
    "@angular/platform-browser-dynamic": "^21.0.1",
    "@angular/router": "^21.0.1",
    "@ng-icons/core": ">=32.0.0 <34.0.0",
    "@ng-icons/lucide": ">=32.0.0 <34.0.0",
    "@spartan-ng/brain": "^0.0.1-alpha.567",
    "@tailwindcss/postcss": "^4.1.17",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "ngx-sonner": ">=3.0.0",
    "rxjs": "~7.8.0",
    "tailwind-merge": "^3.3.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^2.1.1",
    "@analogjs/vitest-angular": "^2.1.1",
    "@angular-eslint/builder": "21.0.1",
    "@angular-eslint/eslint-plugin": "21.0.1",
    "@angular-eslint/eslint-plugin-template": "21.0.1",
    "@angular-eslint/schematics": "21.0.1",
    "@angular-eslint/template-parser": "21.0.1",
    "@angular/build": "^21.0.0",
    "@angular/cli": "~21.0.0",
    "@angular/compiler-cli": "^21.0.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@cypress/schematic": "^2.5.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@spartan-ng/cli": "^0.0.1-alpha.567",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitest/ui": "^4.0.14",
    "autoprefixer": "^10.4.15",
    "commitlint": "^19.7.1",
    "cypress": "^15.7.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.2",
    "prettier-eslint": "^16.3.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.14"
  },
  "optionalDependencies": {
    "@nx/nx-linux-x64-gnu": "^17.2.8",
    "@rollup/rollup-linux-x64-gnu": "^4.21.1"
  }
}
